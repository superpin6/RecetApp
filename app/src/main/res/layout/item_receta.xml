<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgFotoReceta"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/imagen_receta" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtNombreReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="Nombre de receta" />

        <TextView
            android:id="@+id/txtDescripcionReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de receta"
            android:textSize="14sp"
            android:textColor="#555"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#888"
            android:textSize="12sp"
            android:text="Categoría" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFavorito"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="★"
        android:textSize="22sp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:textColor="#BBBBBB"
        android:contentDescription="@string/anadir_favorito" />
</LinearLayout>
